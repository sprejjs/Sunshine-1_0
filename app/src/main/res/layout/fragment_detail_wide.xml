<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="horizontal"
        tools:context="com.spreys.sunshine.app.DetailActivity$PlaceholderFragment">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/lblDay"
                    android:textSize="24sp"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/lblDate"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="20sp"
                    android:textColor="@color/light_font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/lblHighTemp"
                        android:textSize="96sp"
                        android:fontFamily="sans-serif-light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView android:id="@+id/lblLowTemp"
                        android:textColor="@color/light_font"
                        android:textSize="48sp"
                        android:fontFamily="sans-serif-light"
                        android:layout_width="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_height="wrap_content" />

                    <TextView android:id="@+id/lblHumidity"
                        android:layout_width="wrap_content"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_height="wrap_content" />

                    <TextView android:id="@+id/lblWind"
                        android:layout_width="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_height="wrap_content" />

                    <TextView android:id="@+id/lblPressure"
                        android:layout_width="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgTempArt"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>

                <TextView
                    android:textColor="@color/light_font"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:id="@+id/lblDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
    </LinearLayout>
</ScrollView>